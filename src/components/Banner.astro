---
import site from '~/data/site.config.yml';

const buildTime = import.meta.env.BUILD_TIME;
const formattedDate = new Date(buildTime).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const banner = `
<!--
  _ _   _ ___
 / | | | | _ \`
 | | |_| |  _/
 |_|.___/|_|

 ${site.siteName} - ${site.tagline}
 Last updated at ${formattedDate}

-->
`;
---

<Fragment set:html={banner} />
